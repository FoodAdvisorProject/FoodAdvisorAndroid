<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.rane.foodadvisor.ProfileFragment"
    android:orientation="vertical"
    android:layout_marginStart="15sp"
    android:layout_marginEnd="15sp">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:srcCompat="@drawable/farmer"
        android:contentDescription="@string/profile_pic_desc"
        />


    <TextView
        android:id="@+id/nome_azienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_azienda"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        />


    <TextView
        android:id="@+id/email_azienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="16sp"
        android:layout_marginTop="26dp"
        />

    <TextView
        android:id="@+id/description_azienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descrizione_azienda"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/nome_titolare"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cognome_titolare"
        android:textSize="16sp"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/id_azienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id_description"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        />

</LinearLayout>
